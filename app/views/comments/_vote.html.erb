<div class='span0 well text-center'>
  <% if logged_in? %>
    <%= link_to vote_post_comment_path(comment.post_id, comment, vote: true),
      method: :post  do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
  <% end %>
  <%= comment.total_votes %> Votes
  <% if logged_in? %>
    <br/>
    <%= link_to vote_post_comment_path(comment.post_id, comment, vote: false),
      method: :post do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  <% end %>
</div>
