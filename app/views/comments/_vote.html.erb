<div class='span0 well text-center'>
  <% if logged_in? %>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true),
      method: :post, remote: :true  do %>
      <i class='icon-thumbs-up'></i>
    <% end %>
  <% else %>
    <i class='icon-thumbs-up'></i>
  <% end %>
  <br/>
  <span id='post_<%=post.id%>_votes'><%= comment.total_votes %></span> total
  <br/>
  <% if logged_in? %>
    <%= link_to vote_post_path(comment.post, comment vote: false),
      method: :post, remote: :true do %>
      <i class='icon-thumbs-down'></i>
    <% end %>
  <% else %>
    <i class='icon-thumbs-down'></i>
  <% end %>
</div>
