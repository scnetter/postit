<% if logged_in? && is_owner? %>
  <p class='pull-right'>
    [<%= link_to 'edit this post', edit_post_path(@post) %>]
  </p>
<% end %>

<%= render @post.categories %>
<%= render 'shared/content_title', title: @post.title %>
<div class='well'>
  <%= link_to @post.title, fix_url(@post.url) %>
  <br />
  <%= @post.description %>
  <br />
  <span class='quiet'>Submitted by:</span> <%= @post.creator.username %>.
</div>

<% if logged_in? %>
  <%= render 'posts/comment_form', title: "Comment on this post:" %>
<% end %>

<h4>Comments:</h4>
<% @post.comments.each do |comment| %>
  <% if !comment.new_record? %>
    <div class='well span8'>
      "<%= comment.body %>"
      <p>
        <span class='quiet'>by <%= link_to comment.creator.username, '' %></span>
        <small>at <%= display_datetime(comment.created_at) %></small>
      </p>
    </div>
  <% end %>
<% end %>
