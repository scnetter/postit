<div class='span0 well text-center'>
  <span id='thumbsup'><%= post.up_votes %></span>
  <% if logged_in? %>
    <%= link_to vote_post_path(post, vote: true),
      method: :post  do %>
      <i class='icon-thumbs-up'></i>
    <% end %>
  <% else %>
    <i class='icon-thumbs-up'></i>
  <% end %>
  <br/>
  <%= post.total_votes %> total
  <br/>
  <span id='thumbsdown'><%= post.down_votes %></span>
  <% if logged_in? %>
    <%= link_to vote_post_path(post, vote: false),
      method: :post do %>
      <i class='icon-thumbs-down'></i>
    <% end %>
  <% else %>
    <i class='icon-thumbs-down'></i>
  <% end %>
</div>
